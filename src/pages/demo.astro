---
import Layout from '../layouts/Layout.astro';
---

<Layout bodyClass="bg-primary">
	<main class="container mx-auto px-4 py-8 max-w-7xl">
		<!-- Professional Header -->
		<header class="mb-12">
			<div class="hero min-h-96 bg-gradient-to-br from-primary via-primary to-primary/90 rounded-3xl shadow-2xl">
				<div class="hero-content text-center text-primary-content">
					<div class="max-w-2xl">
						<h1 class="mb-6 text-6xl font-bold tracking-tight">
							Context7 Theme
						</h1>
						<p class="mb-8 text-xl opacity-90 leading-relaxed">
							A sophisticated DaisyUI theme featuring rich maroon as the primary color. 
							Designed for professional applications that demand elegance and clarity.
						</p>
						<div class="flex flex-col sm:flex-row gap-4 justify-center">
							<button class="btn btn-secondary btn-lg px-8">
								Get Started
							</button>
							<button class="btn btn-outline btn-lg px-8 text-primary-content border-primary-content hover:bg-primary-content hover:text-primary">
								Learn More
							</button>
						</div>
					</div>
				</div>
			</div>
		</header>

		<!-- Feature Showcase -->
		<section class="mb-16">
			<h2 class="text-4xl font-bold text-center mb-12 text-base-content">
				Professional Components
			</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				<div class="card bg-base-100 shadow-xl border hover:shadow-2xl transition-all duration-300">
					<div class="card-body">
						<div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
							<svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
							</svg>
						</div>
						<h3 class="card-title text-primary mb-2">Modern Design</h3>
						<p class="text-base-content/70 mb-4">
							Clean, contemporary interface with carefully crafted visual hierarchy and spacing.
						</p>
						<div class="card-actions">
							<button class="btn btn-primary btn-sm">Explore</button>
						</div>
					</div>
				</div>

				<div class="card bg-base-100 shadow-xl border hover:shadow-2xl transition-all duration-300">
					<div class="card-body">
						<div class="w-12 h-12 bg-secondary/10 rounded-lg flex items-center justify-center mb-4">
							<svg class="w-6 h-6 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17v4a2 2 0 002 2h4M3 5l2-2m6 6l-4 4"></path>
							</svg>
						</div>
						<h3 class="card-title text-secondary mb-2">Rich Maroon</h3>
						<p class="text-base-content/70 mb-4">
							Sophisticated primary color that conveys trust, professionalism, and authority.
						</p>
						<div class="card-actions">
							<button class="btn btn-secondary btn-sm">View Palette</button>
						</div>
					</div>
				</div>

				<div class="card bg-base-100 shadow-xl border hover:shadow-2xl transition-all duration-300">
					<div class="card-body">
						<div class="w-12 h-12 bg-accent/10 rounded-lg flex items-center justify-center mb-4">
							<svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
							</svg>
						</div>
						<h3 class="card-title text-accent mb-2">DaisyUI 5.0</h3>
						<p class="text-base-content/70 mb-4">
							Built with the latest DaisyUI components for maximum flexibility and consistency.
						</p>
						<div class="card-actions">
							<button class="btn btn-accent btn-sm">Documentation</button>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Component Demo -->
		<section class="space-y-12">
			<h2 class="text-4xl font-bold text-center mb-12 text-base-content">
				Theme Showcase
			</h2>

			<!-- Buttons Section -->
			<div class="card bg-base-200/50 shadow-lg border">
				<div class="card-body">
					<h3 class="card-title text-2xl mb-6">Button Variants</h3>
					<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
						<div>
							<h4 class="font-semibold mb-4 text-base-content/80">Solid Buttons</h4>
							<div class="flex flex-wrap gap-3">
								<button class="btn btn-primary">Primary</button>
								<button class="btn btn-secondary">Secondary</button>
								<button class="btn btn-accent">Accent</button>
								<button class="btn btn-neutral">Neutral</button>
							</div>
						</div>
						<div>
							<h4 class="font-semibold mb-4 text-base-content/80">Outline Buttons</h4>
							<div class="flex flex-wrap gap-3">
								<button class="btn btn-outline btn-primary">Primary</button>
								<button class="btn btn-outline btn-secondary">Secondary</button>
								<button class="btn btn-outline btn-accent">Accent</button>
								<button class="btn btn-outline btn-neutral">Neutral</button>
							</div>
						</div>
					</div>
				</div>
			</div>

			<!-- Alerts Section -->
			<div class="card bg-base-200/50 shadow-lg border">
				<div class="card-body">
					<h3 class="card-title text-2xl mb-6">Status Alerts</h3>
					<div class="space-y-4">
						<div class="alert alert-info shadow-sm">
							<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
							</svg>
							<span>Professional information alert with clear visual hierarchy.</span>
						</div>
						<div class="alert alert-success shadow-sm">
							<svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
							</svg>
							<span>Success! Your operation was completed successfully with Context7 styling.</span>
						</div>
						<div class="alert alert-warning shadow-sm">
							<svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4.5c-.77-.833-1.732-.833-2.502 0L5.312 16.5c-.77.833.192 2.5 1.732 2.5z" />
							</svg>
							<span>Warning: Please review the information before proceeding.</span>
						</div>
						<div class="alert alert-error shadow-sm">
							<svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
							</svg>
							<span>Error: Something went wrong. Please try again or contact support.</span>
						</div>
					</div>
				</div>
			</div>

			<!-- Progress and Stats -->
			<div class="card bg-base-200/50 shadow-lg border">
				<div class="card-body">
					<h3 class="card-title text-2xl mb-6">Progress & Statistics</h3>
					<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
						<div>
							<h4 class="font-semibold mb-4 text-base-content/80">Progress Bars</h4>
							<div class="space-y-4">
								<div>
									<div class="flex justify-between text-sm mb-1">
										<span>Primary Progress</span>
										<span>85%</span>
									</div>
									<progress class="progress progress-primary w-full" value="85" max="100"></progress>
								</div>
								<div>
									<div class="flex justify-between text-sm mb-1">
										<span>Secondary Progress</span>
										<span>70%</span>
									</div>
									<progress class="progress progress-secondary w-full" value="70" max="100"></progress>
								</div>
								<div>
									<div class="flex justify-between text-sm mb-1">
										<span>Accent Progress</span>
										<span>95%</span>
									</div>
									<progress class="progress progress-accent w-full" value="95" max="100"></progress>
								</div>
							</div>
						</div>
						<div>
							<h4 class="font-semibold mb-4 text-base-content/80">Statistics</h4>
							<div class="stats shadow border w-full">
								<div class="stat">
									<div class="stat-title">Total Users</div>
									<div class="stat-value text-primary">31K</div>
									<div class="stat-desc">↗︎ 400 (22%)</div>
								</div>
								<div class="stat">
									<div class="stat-title">Page Views</div>
									<div class="stat-value text-secondary">2.6M</div>
									<div class="stat-desc">↗︎ 90 (14%)</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
</Layout>
