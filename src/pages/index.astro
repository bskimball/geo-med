---
import Layout from "../layouts/Layout.astro";
import { Image, getImage } from "astro:assets";
import georgeThumbsUp from "../assets/george-thumbs-up.jpg";
import dreamHome from "../assets/dream-home.jpg";
import sellHome from "../assets/sell-home.jpg";
import rentHome from "../assets/rent-home.jpg";
import remaxLogo from "../assets/remax-logo.svg";
import soldHomeBkg from "../assets/sold-home-bkg.jpg";
import georgeJacket from "../assets/george-jacket.png";
import iconBackground from "../assets/icon-background.png";
import delawareRoadMap from "../assets/delaware-road-map.png";
import {
  ArrowRightToLine,
  Search,
  BadgeCheck,
  Rocket,
  CircleCheck,
} from "@lucide/astro";
import Navbar from "../components/Navbar.astro";

const optimizedSoldHomeBkg = await getImage({
  src: soldHomeBkg,
  format: "webp",
});

const optimizedGeorgeJacket = await getImage({
  src: georgeJacket,
  format: "webp",
});

const optimizedIconBackground = await getImage({
  src: iconBackground,
  format: "webp",
});

const optimizedDelawareRoadMap = await getImage({
  src: delawareRoadMap,
  format: "webp",
});
---

<Layout
  title="George Medairy - Real Estate Agent"
  description="Discover your dream home with George Medairy, your trusted real estate agent."
>
  <div
    class="bg-no-repeat bg-contain bg-top"
    style={`background-image: url(${optimizedSoldHomeBkg.src}); `}
  >
    <div class="bg-primary/50 backdrop-blur-md">
      <header
        class="bg-primary/20 backdrop-blur-md shadow-xl text-primary-content"
      >
        <Navbar />
      </header>
      <div
        class="lg:bg-size-[700px_auto] lg:bg-no-repeat lg:bg-right lg:min-h-[500px]"
        style={`background-image: url(${optimizedGeorgeJacket.src}); `}
      >
        <div class="container mx-auto max-w-7xl">
          <div class="hero text-shadow-lg max-w-2xl">
            <div class="flex-1 p-12">
              <div
                class="text-7xl font-bold text-white leading-20 tracking-tight mb-3"
              >
                Discover Your Dream Home Today
              </div>
              <p class="text-lg text-primary-content mb-6">
                Explore stunning properties that fit your lifestyle and budget.
                Your perfect home is just a click away.
              </p>
              <div>
                <a href="/explore" class="btn btn-secondary btn-lg mt-4"
                  >Explore</a
                >
                <a
                  href="/contact"
                  class="btn btn-primary btn-lg mt-4 text-primary-content border-primary-content hover:bg-primary-content hover:text-primary"
                >
                  Contact us
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="bg-base-100">
      <div class="container mx-auto py-8 max-w-7xl flex flex-col">
        <section class="py-12">
          <div
            class="text-center mb-12 text-base-content max-w-3xl mx-auto flex flex-col items-center space-y-6"
          >
            <div class="text-lg font-semibold">Welcome</div>
            <div class="text-4xl font-bold">
              Your Trusted Real Estate Partner
            </div>
            <p class="text-xl">
              We specialize in helping you navigate the real estate market.
              Whether you're buying, selling, or renting, our team is here to
              support you every step of the way.
            </p>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <div
              class="card bg-base-100 shadow-xl border hover:shadow-2xl transition-all duration-300"
            >
              <Image
                src={dreamHome}
                alt="Dream Home"
                class="w-full h-48 object-cover rounded-t-lg"
              />
              <div class="card-body">
                <h3 class="card-title text-primary mb-2">
                  Buy Your Dream Home with Confidence
                </h3>
                <p class="text-base-content/70 mb-4">
                  Explore a wide range of properties tailored to your needs.
                </p>
              </div>
            </div>
            <div
              class="card bg-base-100 shadow-xl border hover:shadow-2xl transition-all duration-300"
            >
              <Image
                src={sellHome}
                alt="Sell Home"
                class="w-full h-48 object-cover rounded-t-lg"
              />
              <div class="card-body">
                <h3 class="card-title text-primary mb-2">
                  Sell Your Property for Maximum Value
                </h3>
                <p class="text-base-content/70 mb-4">
                  Our expert team will help you get the best price for your
                  home.
                </p>
              </div>
            </div>
            <div
              class="card bg-base-100 shadow-xl border hover:shadow-2xl transition-all duration-300"
            >
              <Image
                src={rentHome}
                alt="Rent Home"
                class="w-full h-48 object-cover rounded-t-lg"
              />
              <div class="card-body">
                <h3 class="card-title text-primary mb-2">
                  Rent Properties That Suit Your Lifestyle
                </h3>
                <p class="text-base-content/70 mb-4">
                  Discover rental options that fit your lifestyle and budget.
                </p>
              </div>
            </div>
          </div>
        </section>
        <div
          class="max-w-xl mx-auto border-b-4 border-dotted border-gray-400 w-full"
        >
        </div>
        <section class="space-y-12 py-24">
          <div class="max-w-2xl">
            <h3 class="text-4xl font-bold mb-4">
              Your Journey to Buying or Selling <span
                class="text-primary text-5xl">Starts Here</span
              >
            </h3>
            <p>
              Navigating the real estate market can be overwhelming. Our
              step-by-step guide simplifies the process, ensuring a smooth
              experience whether you're buying or selling.
            </p>
          </div>
          <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <div class="space-y-3">
              <div><ArrowRightToLine size={48} /></div>
              <div>
                <div class="font-semibold text-2xl leading-12">
                  Step 1: Initial Consultation
                </div>
                <div class="text-lg">
                  <p>
                    We begin a personalized consultation to understand your
                    goals.
                  </p>
                </div>
              </div>
            </div>
            <div class="space-y-3">
              <div><Search size={48} /></div>
              <div>
                <div class="font-semibold text-2xl leading-12">
                  Step 2: Property Search
                </div>
                <div class="text-lg">
                  <p>
                    Our team will curate a list of properties tailored to your
                    needs.
                  </p>
                </div>
              </div>
            </div>
            <div class="space-y-3">
              <div><BadgeCheck size={48} /></div>
              <div>
                <div class="font-semibold text-2xl leading-12">
                  Step 3: Closing the Deal
                </div>
                <div class="text-lg">
                  <p>
                    We guide you through the negotiation and paperwork to ensure
                    a successful closing.
                  </p>
                </div>
              </div>
            </div>
          </div>
          <div>
            <a href="/contact" class="btn btn-primary btn-lg"
              >Get Started <Rocket /></a
            >
          </div>
        </section>
      </div>
      <div
        class="bg-base-300 bg-size-[25%] border border-gray-400"
        style={`background-image: url(${optimizedIconBackground.src});`}
      >
        <div class="py-12 bg-base-300/30">
          <div class="container mx-auto max-w-7xl space-y-12">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-16">
              <div class="space-y-6 text-xl">
                <h4 class="text-4xl font-bold mb-4">
                  Discover the Advantages of Partnering with Us
                </h4>
                <p>
                  Our team is here to help you every step of the way. Contact us
                  today to schedule your initial consultation.
                </p>
                <div>
                  <ul class="pl-5 space-y-4">
                    <li class="flex items-start gap-4">
                      <div>
                        <CircleCheck
                          size={24}
                          class="inline-block mr-2 text-green-700"
                        />
                      </div>
                      <div class="inline-block">
                        Expert Guidance: Our team has extensive knowledge of the
                        real estate market.
                      </div>
                    </li>
                    <li class="flex items-start gap-3">
                      <div>
                        <CircleCheck
                          size={24}
                          class="inline-block mr-2 text-green-700"
                        />
                      </div>
                      <div class="inline-block">
                        Personalized Service: We tailor our approach to meet
                        your unique needs.
                      </div>
                    </li>
                    <li class="flex items-start gap-3">
                      <div>
                        <CircleCheck
                          size={24}
                          class="inline-block mr-2 text-green-700"
                        />
                      </div>
                      <div class="inline-block">
                        Proven Results: Our track record speaks for itself.
                      </div>
                    </li>
                  </ul>
                </div>
              </div>
              <div>
                <Image
                  src={georgeThumbsUp}
                  alt="George Medairy"
                  class="rounded-lg shadow-lg"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="bg-primary text-primary-content">
        <div
          class="container mx-auto max-w-7xl bg-size-[400px_auto] bg-no-repeat bg-right"
          style={`background-image: url(${optimizedDelawareRoadMap.src});`}
        >
          <div class="bg-primary/50 py-16">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              <div>
                <div>
                  <h2 class="text-3xl font-bold mb-4">Get in Touch</h2>
                  <p class="mb-8">
                    Ready to take the next step? Contact us today to schedule
                    your consultation.
                  </p>
                  <a href="/contact" class="btn btn-secondary">Contact Us</a>
                </div>
                <div class="flex">
                  <div
                    class="bg-white p-4 rounded-lg shadow-lg mt-6 inline-flex"
                  >
                    <img src={remaxLogo.src} alt="Remax Logo" class="w-32" />
                  </div>
                </div>
              </div>
              <div></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
