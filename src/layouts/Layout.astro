---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

interface Props {
  bodyClass?: string;
  title?: string;
  description?: string;
}
let {
  bodyClass = "min-h-screen bg-base-100 text-base-content flex flex-col",
  title = "George Medairy",
  description = "Personal website of George Medairy, a real estate agent in Delaware. Helping you find your dream home in the First State.",
} = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="context7">
  <BaseHead title={title} description={description} />
  <body class={bodyClass}>
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
