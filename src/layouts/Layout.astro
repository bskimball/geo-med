---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

interface Props {
  bodyClass?: string;
  title?: string;
  description?: string;
}
let { bodyClass = "min-h-screen bg-base-100 text-base-content" } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="context7">
  <BaseHead title="Context7 Theme" />
  <body class={bodyClass}>
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
