---
import { siFacebook, siInstagram } from "simple-icons";

let date = new Date();
let year = date.getFullYear();
---

<footer class="bg-primary text-primary-content py-8">
  <div class="container mx-auto max-w-7xl">
    <div class="flex justify-between items-center">
      <div>
        <p>&copy; {year} George Medairy. All rights reserved.</p>
      </div>
      <div>
        <div class="flex space-x-4 items-center">
          <p>Follow us on social media:</p>
          <a
            href="#"
            class="text-primary-content fill-primary-content hover:underline w-8 h-8"
          >
            <div set:html={siFacebook.svg} />
          </a>
          <a
            href="#"
            class="text-primary-content fill-primary-content hover:underline w-8 h-8"
          >
            <div set:html={siInstagram.svg} />
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
